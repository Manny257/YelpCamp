<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">   <!-- Make site responsive on mobile/tablet -->  
<script type="text/javascript" src="/js/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
<link rel="stylesheet" href="/Stylesheets/main.css">

<title> YelpCamp</title>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light mb-3">
        <a class="navbar-brand" href="/">YelpCamp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNav">
          <form action="/campgrounds" method="GET" class="form-inline">
            <input class="form-control form-control-sm mx-md-3 py-0" type="search" placeholder="Search" name="search">
            <button class="btn btn-sm btn-outline-primary" type="submit">Search</button>
          </form>
           <ul class="navbar-nav ml-auto">
             <% if(!currentUser){ %>
               <li class="nav-item ">
                 <a class="nav-link" href="/login">Log In </a>
               </li>
               <li class="nav-item">
                 <a class="nav-link" href="/register">Sign Up</a>
               </li>
            <% } else { %>
              <li class="nav-item dropdown">
                <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                 <div id="notification" class="text-center ">
                  <i class="fas fa-bell mt-2"> </i>
                  <% if (notifications.length > 0){ %>
                    <span class="badge badge-danger badge-pill"> <%= notifications.length %> </span>                
                  <% } %>
                </div>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  <a class="dropdown-item" href="/notifications">View past notifications</a>
                  <% notifications.forEach(function(notification){ %>
                    <a class="dropdown-item" href="/notifications/ <%= notification.id %>">
                    <%= notification.username %> created a new campground
                    </a>
                  <% }) %>
                </div>
              </li>
              <span class="navbar-text px-2">
                Signed in as <%=currentUser.username%>
              </span>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Log Out</a>
              </li>
           <% } %>
           </ul>
         </div>
     </nav>
     <% if(error && error.length>0){ %>
       <div class="container">
         <div class="alert alert-danger" role="alert"> <%= error %> </div> 
       </div>
      <% } %>
      
      <% if(success && success.length>0){ %>   
       <div class="container">
         <div class="alert alert-success" role="alert"> <%= success %> </div> 
       </div>
      <% } %> 